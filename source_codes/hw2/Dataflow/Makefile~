all: liveness.so available.so

CXXFLAGS = -rdynamic $(shell llvm-config --cxxflags) -g -O0

dataflow.o: dataflow.cpp dataflow.h framework.h

available-support.o: available-support.cpp available-support.h framework.h

framework.o: framework.cpp framework.h

%.so: %.o dataflow.o available-support.o framework.o
	$(CXX) -dylib -shared $^ -o $@

clean:
	rm -f *.o *~ *.so

.PHONY: clean all
